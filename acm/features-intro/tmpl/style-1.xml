<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Features Intro Style 4</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
			<field name="intro-img" type="media" default="" label="FEATURES_INTRO_IMAGE_LABEL" description="FEATURES_INTRO_IMAGE_DESC" />
			<field name="description" type="textarea" default="" label="FEATURES_DESCRIPTION_LABEL" description="FEATURES_DESCRIPTION_DESC" rows="5" cols="40" filter="raw" />

			<field name="columns" type="list" label="FEATURES_COLUMNS_LABEL" description="FEATURES_COLUMNS_DESC" >
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
			</field>
		</fieldset>

		<fieldset name="features-info" label="FEATURES_INFO_LABEL" description="FEATURES_INFO_DESC" multiple="1">
				<field name="info-img" type="media" default="" label="FEATURES_INFO_MEDIA_LABEL" description="FEATURES_INFO_MEDIA_DESC" />
				
				<field name="info-title" type="text" default="" label="FEATURES_INFO_TITLE_LABEL" description="FEATURES_INFO_TITLE_DESC" />
				
				<field name="info-text" type="text" default="" label="FEATURES_INFO_TEXT_LABEL" description="FEATURES_INFO_TEXT_DESC"  />
		</fieldset>
  </fields>
</form>