<?xml version="1.0" encoding="utf-8"?>
<form>
  <title>Slideshow Style 1</title>
  <sampledata>
 </sampledata>
  <fields name="slideshow">
  	<fieldset name="sl-opt" label="SLIDESHOW_BASIC_1_LABEL" description="SLIDESHOW_BASIC_DESC">
			<field name="autoplay" type="list" default="true" label="SLIDESHOW_AUTOPLAY_TITLE" description="SLIDESHOW_AUTOPLAY_DES">
				<option value="true">JYES</option>
				<option value="false">JNO</option>
			</field>

			<field name="loop" type="list" default="false" label="SLIDESHOW_LOOP_TITLE" description="SLIDESHOW_LOOP_DES">
				<option value="true">JYES</option>
				<option value="false">JNO</option>
			</field>

			<field name="auto-time" type="text" default="5000" label="SLIDESHOW_AUTOPLAY_TIME_TITLE" description="SLIDESHOW_AUTOPLAY_TIME_DESC"></field>
		</fieldset>

		<fieldset name="basic" label="SLIDESHOW_BASIC_2_LABEL" description="SLIDESHOW_BASIC_2_DESC" multiple="1">
			<field name="item-effect" type="list" default="f-bottom" label="SLIDESHOW_EFFECT_TITLE" description="SLIDESHOW_EFFECT_DES">
				<option value="f-in">Fade In</option>
				<option value="f-bottom">Bottom To Top</option>
				<option value="f-top">Top To Bottom</option>
				<option value="f-left">Left To Right</option>
				<option value="f-right">Right To Left</option>
			</field>

			<field name="image" type="media" default="" label="SLIDESHOW_IMG_TITLE" description="SLIDESHOW_IMG_DESC" required="1"></field>
			
			<field name="title" type="text" default="" label="SLIDESHOW_TITLE" description="SLIDESHOW_TITLE_DESC"></field>

			<field name="desc" type="text" default="" label="SLIDESHOW_DESCRIPTIONS" description="SLIDESHOW_DESCRIPTIONS_DES"></field>

			<field name="button" type="text" default="" label="SLIDESHOW_BUTTON" description="SLIDESHOW_BUTTON_DES"></field>

			<field name="btn-link" type="text" default="" label="SLIDESHOW_BUTTON_LINK" description="SLIDESHOW_BUTTON_LINK_DES"></field>

			<field name="btn-type" type="list" default="primary" label="SLIDESHOW_BUTTON_TYPE" description="SLIDESHOW_BUTTON_TYPE_DES">
				<option value="primary">Primary</option>
				<option value="success">Success</option>
				<option value="warning">Warning</option>
				<option value="info">Info</option>
			</field>

			<field name="button-2" type="text" default="" label="SLIDESHOW_BUTTON_2" description="SLIDESHOW_BUTTON_2_DES"></field>

			<field name="btn-link-2" type="text" default="" label="SLIDESHOW_BUTTON_2_LINK" description="SLIDESHOW_BUTTON_2_LINK_DES"></field>

			<field name="btn-type-2" type="list" default="primary" label="SLIDESHOW_BUTTON_TYPE" description="SLIDESHOW_BUTTON_TYPE_DES">
				<option value="primary">Primary</option>
				<option value="success">Success</option>
				<option value="warning">Warning</option>
				<option value="info">Info</option>
			</field>

		</fieldset>
  </fields>
</form>